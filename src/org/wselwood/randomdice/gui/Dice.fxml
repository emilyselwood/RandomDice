<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?scenebuilder-preview-i18n-resource Dice.properties?>

<GridPane fx:id="borderPane" xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.wselwood.randomdice.gui.DiceController">
    <Label fx:id="x1" text="%minLabel" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="minNumberBox" text="%minDefaultNumber" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="%maxLabel" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="maxNumberBox" text="%maxDefaultNumber" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button fx:id="runButton" defaultButton="true" onAction="#runButtonAction" text="%runButton"
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="resultField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="99.0" minWidth="10.0" prefWidth="54.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="146.0" minWidth="10.0" prefWidth="146.0"/>
    </columnConstraints>
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
</GridPane>
